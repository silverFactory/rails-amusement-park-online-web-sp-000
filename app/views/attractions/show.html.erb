<h1><%= @attraction.name %></h1>
<% if @user.admin == false %>
  <%= form_tag ({controller: 'attractions', action: 'ride', method: 'post'}) do %>
  <%= hidden_field(:attraction, :id) %>
  <%= submit_tag "Go on this ride" %>
  <% end %>
<% else %>
<%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>
<% end %>
